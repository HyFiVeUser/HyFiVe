IndentWidth: 2
ContinuationIndentWidth: 2

# damit 체berhaupt umgebrochen wird
ColumnLimit: 300    # z.B. 100/120/140 statt 500

# damit dann 1 Argument pro Zeile kommt
BinPackArguments: false
BinPackParameters: false
AlignArrayOfStructures: Left
# damit die Folgezeilen unter dem ersten Argument ausgerichtet werden
AlignAfterOpenBracket: Align

# optional: Umbruch nach "(" beg체nstigen
PenaltyBreakBeforeFirstCallParameter: 0

BreakBeforeBraces: Allman

SortIncludes: true
IncludeBlocks: Regroup

# verhindert, dass "Main Include" (z.B. "DeepSleep.h") separat oben gehalten wird
IncludeIsMainRegex: 'a^'

# h채lt maximal 1 Leerzeile am St체ck
MaxEmptyLinesToKeep: 1

IncludeCategories:
  - Regex: '^<Arduino\.h>$'
    Priority: 1
  - Regex: '^<.*>$'
    Priority: 2
  - Regex: '^".*"$'
    Priority: 3

AlignConsecutiveAssignments:
  Enabled: true